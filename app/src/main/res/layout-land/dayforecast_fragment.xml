<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1"

    >

    <!--  Image weather condition -->
    <ImageView android:id="@+id/forCondIcon"
        android:layout_marginTop="10dp"
        android:layout_marginStart="60dp"
        android:layout_height="140dp"
        android:layout_width="140dp"
        app:srcCompat="@drawable/sadf"  />
    />

    <TextView
        android:layout_marginStart="350sp"
        android:id="@+id/skydescForecast"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/skydescForecast"
        >
    </TextView>


    <TextView
        android:textSize="16dp"
        android:layout_marginStart="350sp"
        android:layout_marginTop="10dp"
        android:id="@+id/tempForecast"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skydescForecast"

        >
    </TextView>

    <TextView
        android:layout_marginStart="350sp"
        android:layout_marginTop="40dp"
        android:id="@+id/cis2"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skydescForecast"

      >
    </TextView>

    <TextView
        android:layout_marginStart="350sp"
        android:layout_marginTop="70dp"
        android:id="@+id/zachm2"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skydescForecast"

        >
    </TextView>
    <TextView
        android:layout_marginStart="350sp"
        android:layout_marginTop="100dp"
        android:id="@+id/opis2"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skydescForecast"

        >
    </TextView>

</RelativeLayout>