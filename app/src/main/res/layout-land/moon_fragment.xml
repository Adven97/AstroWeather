<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="260sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/moonxd" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40sp"
        android:layout_marginLeft="20sp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:id="@+id/rise"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Wschód"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/rise_value"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Treść"
                android:layout_weight="1"/>


            <TextView
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:id="@+id/moonset"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Zachód"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/moonset_value"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Treść"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="40sp"
        android:layout_marginLeft="20sp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:id="@+id/new_moon"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Najbliższy Nów"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/new_moon_value"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Treść"
                android:layout_weight="1"/>

            <TextView
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:id="@+id/full_moon"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Najbliższa Pełnia"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/full_moon_value"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Treść"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="40sp"
        android:layout_marginLeft="20sp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:id="@+id/faza"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Faza księżyca"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/faza_value"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Treść"
                android:layout_weight="1"/>

            <TextView
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:id="@+id/month"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Dzień miesiąca synodycznego:"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/month_value"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Treść"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>