<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1"

    >

    <!--  Image weather condition -->
    <ImageView android:id="@+id/forCondIcon"
        android:layout_marginTop="440dp"
        android:layout_marginStart="160dp"
        android:layout_height="360dp"
        android:layout_width="360dp"
        app:srcCompat="@drawable/sadf"  />
    />

    <TextView
        android:textSize="35dp"
        android:id="@+id/skydescForecast"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/skydescForecast"
        android:layout_alignStart="@id/forCondIcon">
    </TextView>


    <TextView
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/tempForecast"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skydescForecast"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/forCondIcon">
    </TextView>

    <TextView
        android:textSize="35dp"
        android:layout_marginTop="130dp"
        android:id="@+id/cis2"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skydescForecast"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/forCondIcon">
    </TextView>

    <TextView
        android:textSize="35dp"
        android:layout_marginTop="230dp"
        android:id="@+id/zachm2"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skydescForecast"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/forCondIcon">
    </TextView>
    <TextView
        android:textSize="35dp"
        android:layout_marginTop="330dp"
        android:id="@+id/opis2"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skydescForecast"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/forCondIcon">
    </TextView>

</RelativeLayout>